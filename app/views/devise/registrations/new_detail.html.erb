<h2>ユーザー詳細情報登録</h2>

<%= form_for @detail do |f| %>
  <%= render "devise/shared/error_messages", resource: @detail %>

  <div class="field">
    <%= f.label :age %><br />
    <%= f.text_field :age, class:"age", placeholder:"例:30" %>歳
  </div>

  <div class="field">
    <%= f.label :area %><br />
    <%= f.collection_select(:area_id, Area.all, :id, :name, {}, {class:"pull_select"}) %>
  </div>

  <div class="field">
    <%= f.label :occupation %><br />
    <%= f.collection_select(:occupation_id, Occupation.all, :id, :name, {}, {class:"pull_select"}) %>
  </div>

  <div class="field">
    <%= f.label :genre %><br />
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"pull_select"}) %>
  </div>

  <div class="field">
    <%= f.label :school %><br />
    <%= f.text_field :school, class:"school", placeholder:"例:〇〇大学" %>卒業
  </div>

  <div class="field">
    <%= f.label :experience %><br />
    <%= f.collection_select(:experience_id, Experience.all, :id, :name, {}, {class:"pull_select"}) %>
  </div>

  <div class="field">
    <%= f.label :language %><br />
    <%= f.collection_select(:language_id, Language.all, :id, :name, {}, {class:"pull_select"}) %>
  </div>

  <div class="field">
    <%= f.label :interest %><br />
    <%= f.collection_select(:interest_id, Interest.all, :id, :name, {}, {class:"pull_select"}) %>
  </div>

  <div class="field">
    <%= f.label :pr %><br />
    <%= f.text_area :pr, class:"pr", placeholder:"こんにちは。私は、web系エンジニアになることを目指して就職活動をしております。同じエンジニア職を目指す同期の方々、及び現職のエンジニアさんと交流を深められればと思いTechMatchに登録してみました。気軽にチャットしていただけると幸いです！" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

